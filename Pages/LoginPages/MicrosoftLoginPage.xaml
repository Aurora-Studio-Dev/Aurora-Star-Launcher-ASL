<Page x:Class="AuroraStarLauncher.Pages.LoginPages.MicrosoftLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AuroraStarLauncher.Pages.LoginPages"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
      mc:Ignorable="d" 
      d:DesignHeight="175" d:DesignWidth="175"
      Title="MicrosoftLoginPage">
    <Grid>
        <TextBlock x:Name="User_Name" Text="你未登录" FontSize="22" VerticalAlignment="Center" Margin="0,-50,0,0" HorizontalAlignment="Center"/>
        <Button x:Name="Login" Content="登录账户" FontSize="15" Height="35" Click="Login_Click" Margin="0,0,0,30" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
        <ui:HyperlinkButton Content="如何登录?" FontSize="12" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="HyperlinkButton_Click"/>
    </Grid>
</Page>
